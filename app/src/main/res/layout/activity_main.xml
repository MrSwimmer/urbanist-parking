<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".feature.main.MainActivity">
        <ImageView
                android:src="@drawable/ic_icon"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:id="@+id/icon"
                android:layout_marginBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintBottom_toTopOf="@+id/textView"/>
        <TextView
                android:text="Урбанист.Парковка"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/Urbanist.Text.Title"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:gravity="center"
                android:foregroundGravity="center" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
                app:layout_constraintVertical_bias="0.59000003"/>
        <Button
                android:text="Правила парковки"
                android:id="@+id/rulesButton"
                app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="24dp"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                android:background="@drawable/button_black_background"
                style="@style/Urbanist.Button"/>
        <Button
                android:text="Сообщить о нарушении"
                android:id="@+id/reportButton"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                app:layout_constraintBottom_toTopOf="@+id/rulesButton" android:layout_marginBottom="8dp"
                android:background="@drawable/button_red_background"
                style="@style/Urbanist.Button"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>