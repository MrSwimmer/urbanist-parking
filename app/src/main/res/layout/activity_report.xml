<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <ProgressBar
                    style="?android:attr/progressBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar"
                    android:layout_gravity="center"
                    android:visibility="visible"/>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                <include
                        android:layout_marginTop="16dp"
                        app:desc="@string/report_desc_1"
                        app:icon="@drawable/ic_report_photo_1"
                        layout="@layout/include_photo"
                        tools:ignore="IncludeLayoutParam"/>
                <include
                        android:layout_marginTop="16dp"
                        app:desc="@string/report_desc_2"
                        app:icon="@drawable/ic_report_photo_2"
                        layout="@layout/include_photo"
                        android:layout_margin="16dp"
                        tools:ignore="IncludeLayoutParam"/>
                <include
                        android:layout_marginTop="16dp"
                        app:desc="@string/report_desc_3"
                        app:icon="@drawable/ic_report_photo_3"
                        layout="@layout/include_photo"
                        tools:ignore="IncludeLayoutParam"/>

                <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="24dp"
                        android:layout_marginEnd="24dp"
                        android:id="@+id/textInputLayout">

                    <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/comment"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Комментарий"/>
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                        android:text="@string/report_text_auto_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/sendButton"
                        app:layout_constraintEnd_toEndOf="@+id/sendButton"
                        app:layout_constraintTop_toBottomOf="@+id/textInputLayout" android:layout_marginTop="16dp"/>
                <Button
                        android:text="Отправить"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/sendButton"
                        android:enabled="false"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="24dp"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                        style="@style/Widget.AppCompat.Button.Colored"
                        app:layout_constraintTop_toBottomOf="@+id/textView4"
                        android:layout_marginTop="16dp"/>
            </LinearLayout>
        </FrameLayout>
    </ScrollView>
</layout>